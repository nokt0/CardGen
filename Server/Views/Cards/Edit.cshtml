@model Server.Models.Card


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
